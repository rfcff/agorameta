<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainFragment"
    android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >

    <LinearLayout
        android:id="@+id/ll_local_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:orientation="horizontal" >
        <FrameLayout
            android:id="@+id/fl_local_meta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_200" />

        <FrameLayout
            android:id="@+id/fl_local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/teal_700" />

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/trtc_local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/teal_700" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_remote_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_local_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2"
        android:orientation="horizontal" >
        <FrameLayout
            android:id="@+id/fl_remote_meta"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_200" />

        <FrameLayout
            android:id="@+id/fl_remote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/purple_500" />

        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/trtc_remote"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/purple_500" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_join"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_uid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="116001"
            android:hint="@string/uid" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/channel_id" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join_channel" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rg_rtc_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_join"
        android:orientation="horizontal" >
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_agora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textColor="@color/black"
            android:text="@string/metabolt_type_agora"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_trtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/metabolt_type_trtc"/>
        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/rb_thunder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:text="@string/metabolt_type_thunder" />
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_avatar_view_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rg_rtc_type"
        android:entries="@array/avatar_view_type" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_sync_type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/sp_avatar_view_type"
        app:layout_constraintBottom_toTopOf="@id/rg_rtc_type"
        android:entries="@array/sync_type" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_music_array"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sp_avatar_view_type"
        android:entries="@array/music_array" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_beat_array"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sp_music_array"
        android:entries="@array/beat_array" />
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_role_array"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/sp_beat_array"
        app:layout_constraintBottom_toTopOf="@id/sp_music_array"
        android:entries="@array/role_array" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_init_rtc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_join"
        android:text="@string/init_rtc" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_music_dance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_init_rtc"
        android:text="@string/start_music_dance" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_music_beat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_music_dance"
        android:text="@string/start_music_beat" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_ai_face"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_remote_video"
        android:text="@string/start_ai_face" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_metabolt_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/btn_start_ai_face"
        app:layout_constraintTop_toBottomOf="@id/ll_remote_video"
        android:text="@string/metabolt_ai_face" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_ai_face"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/tv_metabolt_hint"
        app:layout_constraintTop_toBottomOf="@id/ll_remote_video"
        android:text="@string/confirm_ai_face" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_switch_makeup"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/btn_confirm_ai_face"
        app:layout_constraintTop_toBottomOf="@id/ll_remote_video"
        android:text="@string/switch_makeup" />

</androidx.constraintlayout.widget.ConstraintLayout>